{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["node"],
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "drizzle.config.ts"],
  "exclude": ["node_modules"]
} 
